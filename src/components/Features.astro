            <div class={`text-2xl ${feature.iconColor} mr-3`}>
              {feature.icon}
            </div>
            <h3 class="text-lg font-semibold text-white">
              {feature.title}
            </h3>
          </div>
          
          <p class="text-gray-400 mb-6 text-sm leading-relaxed">
            {feature.description}
          </p>
          
          <ul class="space-y-2">
            {feature.links.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-sm text-blue-400 hover:text-blue-300 transition-colors duration-200 flex items-center group"
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noopener noreferrer" : undefined}
                >
                  {link.name}
                  {link.external && (
                    <svg class="w-3 h-3 ml-1 opacity-50 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
