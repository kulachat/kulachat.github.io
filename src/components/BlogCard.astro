---
export interface Props {
  title: string;
  description: string;
  author: string;
  publishDate: Date;
  category: string;
  tags: string[];
  image?: {
    src: string;
    alt: string;
  };
  readingTime?: number;
  slug: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  author, 
  publishDate, 
  category, 
  tags, 
  image, 
  readingTime, 
  slug, 
  featured = false 
} = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class={`bg-gray-800 rounded-xl border border-gray-700 hover:border-gray-600 transition-all duration-300 overflow-hidden group ${featured ? 'ring-2 ring-primary-500/20' : ''}`}>
  {image && (
    <div class="aspect-video overflow-hidden">
      <img 
        src={image.src} 
        alt={image.alt}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </div>
  )}
  
  <div class="p-6">
    {featured && (
      <div class="flex items-center gap-2 mb-3">
        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary-500/20 text-primary-300 border border-primary-500/30">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          Featured
        </span>
      </div>
    )}
    
    <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
      <span class="inline-flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        {formattedDate}
      </span>
      
      {readingTime && (
        <span class="inline-flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          {readingTime} min read
        </span>
      )}
      
      <span class="inline-flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        {author}
      </span>
    </div>
    
    <div class="mb-3">
      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-500/20 text-blue-300 border border-blue-500/30">
        {category}
      </span>
    </div>
    
    <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-300 transition-colors">
      <a href={`/blog/${slug}`} class="block">
        {title}
      </a>
    </h3>
    
    <p class="text-gray-300 mb-4 line-clamp-3">
      {description}
    </p>
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.slice(0, 3).map(tag => (
          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-700 text-gray-300 hover:bg-gray-600 transition-colors">
            #{tag}
          </span>
        ))}
        {tags.length > 3 && (
          <span class="text-xs text-gray-400">
            +{tags.length - 3} more
          </span>
        )}
      </div>
    )}
    
    <div class="flex items-center justify-between">
      <a 
        href={`/blog/${slug}`}
        class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors font-medium"
      >
        Read more
        <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>