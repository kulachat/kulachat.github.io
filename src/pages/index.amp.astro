    <style amp-custom>
      body {
        background: #202124;
        color: #fff;
        margin: 0;
        font-family: 'Philosopher', sans-serif;
        min-height: 100vh;
      }

      h1 {
        font-size: 80px;
        margin: 0 0 1rem 0;
      }

      @media only screen and (max-width: 576px) {
        h1 {
          font-size: 32px;
          font-weight: bold;
        }
      }

      h2 {
        font-family: 'IBM Plex Sans Thai Looped', sans-serif;
        font-size: 22px;
        font-weight: bold;
        margin: 0 0 2rem 0;
      }

      @media only screen and (max-width: 576px) {
        h2 {
          font-size: 18px;
        }
      }

      p {
        letter-spacing: 1px;
        opacity: .8;
        font-weight: 300;
        line-height: 1.6;
      }

      a {
        color: #fff;
        text-decoration: underline;
      }

      .slide-container {
        height: 100vh;
      }

      .slide {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }

      .slide1 { background: #202124; }
      .slide2 { background: #26211c; }
      .slide3 { background: #2f2f2f; }
      .slide4 { background: #13191D; }
      .slide5 { background: #111; }
      .slide6 { background: #111; }

      .grid-parent {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        align-items: center;
      }

      @media only screen and (max-width: 768px) {
        .grid-parent {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
      }

      .intro-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .intro-image {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
      }

      .intro-text {
        padding: 1rem;
      }

      .sub-title {
        font-family: 'IBM Plex Sans Thai Looped', sans-serif;
        font-size: 22px;
        font-weight: bold;
      }

      .d-block {
        display: block;
      }

      small {
        font-size: 0.8rem;
        opacity: 0.7;
      }

      hr {
        border: none;
