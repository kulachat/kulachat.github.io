---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogList from '../../components/BlogList.astro';
import { getFeaturedPosts } from '../../utils/blog';

const featuredPosts = await getFeaturedPosts();
---

<BaseLayout 
  title="Featured Posts - Digital Nomad Hub" 
  description="Discover our most popular and featured articles about digital nomad life, remote work, and travel."
>
  <main class="min-h-screen bg-gray-900">
    <!-- Hero Section -->
    <section class="pt-20 pb-12 bg-gradient-to-b from-gray-800 to-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-yellow-500/20 text-yellow-300 border border-yellow-500/30 mb-6">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Featured Content
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
            Featured <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-400">Posts</span>
          </h1>
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            Our most popular and comprehensive guides for digital nomads. 
            Hand-picked articles that provide the most value for your nomadic journey.
          </p>
          
          <div class="flex justify-center">
            <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
              <div class="text-3xl font-bold text-yellow-400 mb-2">{featuredPosts.length}</div>
              <div class="text-gray-400">Featured Articles</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <section class="py-6 bg-gray-800/30 border-b border-gray-700">
      <div class="container mx-auto px-4">
        <div class="flex justify-center">
          <nav class="flex gap-4">
            <a href="/blog" class="px-4 py-2 text-gray-300 hover:text-white transition-colors">All Posts</a>
            <a href="/blog/featured" class="px-4 py-2 bg-yellow-600 text-white rounded-lg">Featured</a>
          </nav>
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 ? (
      <BlogList 
        posts={featuredPosts}
        showFeatured={true}
        title=""
        subtitle=""
      />
    ) : (
      <section class="py-20">
        <div class="container mx-auto px-4">
          <div class="text-center">
            <div class="text-6xl mb-6">‚≠ê</div>
            <h2 class="text-3xl font-bold text-white mb-4">No Featured Posts Yet</h2>
            <p class="text-gray-400 mb-8">We're working on curating amazing content for you. Check back soon!</p>
            <a 
              href="/blog" 
              class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors"
            >
              Browse All Posts
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}
  </main>
</BaseLayout>