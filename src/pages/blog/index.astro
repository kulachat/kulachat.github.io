---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// Sort posts by publish date (newest first)
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

const featuredPosts = sortedPosts.filter(post => post.data.featured);
const currentPage = 1;
const postsPerPage = 9;
const totalPages = Math.ceil(sortedPosts.length / postsPerPage);
const displayPosts = sortedPosts.slice(0, postsPerPage);
---

<BaseLayout 
  title="Blog - Digital Nomad Hub" 
  description="Discover insights, tips, and guides for digital nomads. Learn about remote work, travel destinations, productivity, and the nomadic lifestyle."
>
  <main class="min-h-screen bg-gray-900">
    <!-- Hero Section -->
    <section class="pt-20 pb-16 bg-gradient-to-b from-gray-800 to-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
            Digital Nomad <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">Blog</span>
          </h1>
          <p class="text-xl text-gray-300 mb-8 leading-relaxed">
            Your guide to the digital nomad lifestyle. Discover remote work tips, destination guides, 
            productivity hacks, and everything you need to work from anywhere.
          </p>
          
          <!-- Stats -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-2xl mx-auto">
            <div class="bg-gray-800/50 rounded-lg p-4 border border-gray-700">
              <div class="text-2xl font-bold text-white">{sortedPosts.length}</div>
              <div class="text-gray-400 text-sm">Articles</div>
            </div>
            <div class="bg-gray-800/50 rounded-lg p-4 border border-gray-700">
              <div class="text-2xl font-bold text-white">{featuredPosts.length}</div>
              <div class="text-gray-400 text-sm">Featured</div>
            </div>
            <div class="bg-gray-800/50 rounded-lg p-4 border border-gray-700">
              <div class="text-2xl font-bold text-white">‚àû</div>
              <div class="text-gray-400 text-sm">Inspiration</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Search Bar -->
    <section class="py-8 bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="text"
              placeholder="Search articles..."
              class="w-full px-4 py-3 pl-12 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
              id="search-input"
            />
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Navigation -->
    <section class="py-8 bg-gray-800/30">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/blog" class="px-4 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors">
            All Posts
          </a>
          <a href="/blog/category/lifestyle" class="px-4 py-2 bg-gray-700 text-gray-300 rounded-lg font-medium hover:bg-gray-600 hover:text-white transition-colors">
            Lifestyle
          </a>
          <a href="/blog/category/destinations" class="px-4 py-2 bg-gray-700 text-gray-300 rounded-lg font-medium hover:bg-gray-600 hover:text-white transition-colors">
            Destinations
          </a>
          <a href="/blog/category/productivity" class="px-4 py-2 bg-gray-700 text-gray-300 rounded-lg font-medium hover:bg-gray-600 hover:text-white transition-colors">
            Productivity
          </a>
          <a href="/blog/featured" class="px-4 py-2 bg-yellow-600 text-white rounded-lg font-medium hover:bg-yellow-700 transition-colors">
            Featured
          </a>
        </div>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        {displayPosts.length === 0 ? (
          <div class="text-center py-12">
            <div class="text-6xl mb-4">üìù</div>
            <h3 class="text-2xl font-bold text-white mb-2">No posts found</h3>
            <p class="text-gray-400">Check back soon for new content!</p>
          </div>
        ) : (
          <div>
            {/* Featured Posts */}
            {featuredPosts.length > 0 && (
              <div class="mb-12">
                <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                  <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  Featured Posts
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                  {featuredPosts.slice(0, 2).map(post => (
                    <article class="bg-gray-800 rounded-xl border border-gray-700 hover:border-gray-600 transition-all duration-300 overflow-hidden group ring-2 ring-primary-500/20">
                      {post.data.image && (
                        <div class="aspect-video overflow-hidden">
                          <img 
                            src={post.data.image.src} 
                            alt={post.data.image.alt}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                            loading="lazy"
                          />
                        </div>
                      )}
                      
                      <div class="p-6">
                        <div class="flex items-center gap-2 mb-3">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary-500/20 text-primary-300 border border-primary-500/30">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            Featured
                          </span>
                        </div>
                        
                        <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                          <span class="inline-flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                          </span>
                          
                          {post.data.readingTime && (
                            <span class="inline-flex items-center gap-1">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              {post.data.readingTime} min read
                            </span>
                          )}
                          
                          <span class="inline-flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            {post.data.author}
                          </span>
                        </div>
                        
                        <div class="mb-3">
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-500/20 text-blue-300 border border-blue-500/30">
                            {post.data.category}
                          </span>
                        </div>
                        
                        <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-300 transition-colors">
                          <a href={`/blog/${post.slug}`} class="block">
                            {post.data.title}
                          </a>
                        </h3>
                        
                        <p class="text-gray-300 mb-4 line-clamp-3">
                          {post.data.description}
                        </p>
                        
                        {post.data.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2 mb-4">
                            {post.data.tags.slice(0, 3).map(tag => (
                              <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-700 text-gray-300 hover:bg-gray-600 transition-colors">
                                #{tag}
                              </span>
                            ))}
                            {post.data.tags.length > 3 && (
                              <span class="text-xs text-gray-400">
                                +{post.data.tags.length - 3} more
                              </span>
                            )}
                          </div>
                        )}
                        
                        <div class="flex items-center justify-between">
                          <a 
                            href={`/blog/${post.slug}`}
                            class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors font-medium"
                          >
                            Read more
                            <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                          </a>
                        </div>
                      </div>
                    </article>
                  ))}
                </div>
              </div>
            )}
            
            {/* All Posts Grid */}
            <div>
              {featuredPosts.length > 0 && (
                <h3 class="text-2xl font-bold text-white mb-6">Latest Posts</h3>
              )}
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {displayPosts.map(post => (
                  <article class="bg-gray-800 rounded-xl border border-gray-700 hover:border-gray-600 transition-all duration-300 overflow-hidden group">
                    {post.data.image && (
                      <div class="aspect-video overflow-hidden">
                        <img 
                          src={post.data.image.src} 
                          alt={post.data.image.alt}
                          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                          loading="lazy"
                        />
                      </div>
                    )}
                    
                    <div class="p-6">
                      {post.data.featured && (
                        <div class="flex items-center gap-2 mb-3">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary-500/20 text-primary-300 border border-primary-500/30">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            Featured
                          </span>
                        </div>
                      )}
                      
                      <div class="flex items-center gap-4 text-sm text-gray-400 mb-3">
                        <span class="inline-flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </span>
                        
                        {post.data.readingTime && (
                          <span class="inline-flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {post.data.readingTime} min read
                          </span>
                        )}
                        
                        <span class="inline-flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                          </svg>
                          {post.data.author}
                        </span>
                      </div>
                      
                      <div class="mb-3">
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-500/20 text-blue-300 border border-blue-500/30">
                          {post.data.category}
                        </span>
                      </div>
                      
                      <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-300 transition-colors">
                        <a href={`/blog/${post.slug}`} class="block">
                          {post.data.title}
                        </a>
                      </h3>
                      
                      <p class="text-gray-300 mb-4 line-clamp-3">
                        {post.data.description}
                      </p>
                      
                      {post.data.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-4">
                          {post.data.tags.slice(0, 3).map(tag => (
                            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-700 text-gray-300 hover:bg-gray-600 transition-colors">
                              #{tag}
                            </span>
                          ))}
                          {post.data.tags.length > 3 && (
                            <span class="text-xs text-gray-400">
                              +{post.data.tags.length - 3} more
                            </span>
                          )}
                        </div>
                      )}
                      
                      <div class="flex items-center justify-between">
                        <a 
                          href={`/blog/${post.slug}`}
                          class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors font-medium"
                        >
                          Read more
                          <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                          </svg>
                        </a>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-16 bg-gradient-to-r from-blue-600/20 to-purple-600/20 border-t border-gray-700">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-white mb-4">Stay Updated</h2>
          <p class="text-gray-300 mb-8">
            Get notified when we launch our blog with amazing digital nomad content.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
            />
            <button class="px-6 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Simple search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  
  if (searchInput) {
    searchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const query = searchInput.value.trim();
        if (query) {
          window.location.href = `/blog/search?q=${encodeURIComponent(query)}`;
        }
      }
    });
  }
</script>