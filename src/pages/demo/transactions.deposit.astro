---
import DemoLayout from '../../layouts/DemoLayout.astro';
---

<DemoLayout title="Transactions - Deposit">
  <div class="container mt-4">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/demo">RUNEX</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/demo">Dashboard</a>
        </div>
      </div>
    </nav>

    <div class="row mt-4">
      <!-- Sidebar -->
      <div class="col-md-3">
        <div class="list-group">
          <a href="/demo" class="list-group-item list-group-item-action">
            Dashboard
          </a>
          <a href="/demo/transactions.deposit" class="list-group-item list-group-item-action active">
            Deposit Funds
          </a>
          <a href="#" class="list-group-item list-group-item-action">
            Withdraw Funds
          </a>
          <a href="#" class="list-group-item list-group-item-action">
            Transaction History
          </a>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            <h4>Deposit Funds</h4>
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Deposit Methods -->
              <div class="col-md-6">
                <h5>Select Deposit Method</h5>
                
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="depositMethod" id="creditCard" value="creditCard" checked>
                      <label class="form-check-label" for="creditCard">
                        <strong>Credit/Debit Card</strong>
                        <br><small class="text-muted">Instant deposit • Fee: 2.5%</small>
                      </label>
                    </div>
                  </div>
                </div>
                
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="depositMethod" id="bankTransfer" value="bankTransfer">
                      <label class="form-check-label" for="bankTransfer">
                        <strong>Bank Transfer</strong>
                        <br><small class="text-muted">1-3 business days • Fee: $0</small>
                      </label>
                    </div>
                  </div>
                </div>
                
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="depositMethod" id="crypto" value="crypto">
                      <label class="form-check-label" for="crypto">
                        <strong>Cryptocurrency</strong>
                        <br><small class="text-muted">Near instant • Fee: Network fees apply</small>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Deposit Form -->
              <div class="col-md-6">
                <h5>Deposit Details</h5>
                <form>
                  <div class="mb-3">
                    <label for="amount" class="form-label">Deposit Amount</label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input type="number" class="form-control" id="amount" min="250" step="0.01" required />
                    </div>
                    <small class="form-text text-muted">Minimum deposit: $250</small>
                  </div>
                  
                  <div class="mb-3">
                    <label for="currency" class="form-label">Currency</label>
                    <select class="form-select" id="currency">
                      <option value="USD">USD - US Dollar</option>
                      <option value="EUR">EUR - Euro</option>
                      <option value="THB">THB - Thai Baht</option>
                    </select>
                  </div>
                  
                  <!-- Credit Card Fields (shown by default) -->
                  <div id="creditCardFields">
                    <div class="mb-3">
                      <label for="cardNumber" class="form-label">Card Number</label>
                      <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" />
                    </div>
                    
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="expiryDate" class="form-label">Expiry Date</label>
                        <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY" />
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="cvv" class="form-label">CVV</label>
                        <input type="text" class="form-control" id="cvv" placeholder="123" />
                      </div>
                    </div>
                    
                    <div class="mb-3">
                      <label for="cardHolder" class="form-label">Card Holder Name</label>
                      <input type="text" class="form-control" id="cardHolder" />
                    </div>
                  </div>
                  
                  <div class="alert alert-info">
                    <small>
                      <strong>Security:</strong> All transactions are secured with SSL encryption. 
                      Your financial information is never stored on our servers.
                    </small>
                  </div>
                  
                  <button type="submit" class="btn btn-success w-100">
                    Process Deposit
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Deposits -->
        <div class="card mt-4">
          <div class="card-header">
            <h5>Recent Deposits</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Method</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Reference</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>2025-11-04 10:30</td>
                    <td>Credit Card</td>
                    <td>$500.00</td>
                    <td><span class="badge bg-success">Completed</span></td>
                    <td>TXN-001234</td>
                  </tr>
                  <tr>
                    <td>2025-11-02 14:15</td>
                    <td>Bank Transfer</td>
                    <td>$1,000.00</td>
                    <td><span class="badge bg-warning">Pending</span></td>
                    <td>TXN-001233</td>
                  </tr>
                  <tr>
                    <td>2025-10-30 09:45</td>
                    <td>Cryptocurrency</td>
                    <td>$750.00</td>
                    <td><span class="badge bg-success">Completed</span></td>
                    <td>TXN-001232</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DemoLayout>

<style>
  .bg-dark {
    background-color: #222 !important;
  }
</style>