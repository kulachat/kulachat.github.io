---
import DemoLayout from '../../layouts/DemoLayout.astro';
---

<DemoLayout title="Live Account - RUNEX">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Live Trading Account</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="alert alert-warning">
                  <strong>Important:</strong> Live trading involves real money and financial risk. Please ensure you understand the risks involved.
                </div>
                
                <h5>Account Types</h5>
                <div class="card mb-3">
                  <div class="card-body">
                    <h6 class="card-title">Standard Account</h6>
                    <ul>
                      <li>Minimum deposit: $250</li>
                      <li>Leverage: Up to 1:200</li>
                      <li>Spreads: From 1.2 pips</li>
                      <li>Commission: $0</li>
                    </ul>
                    <button class="btn btn-primary">Select Standard</button>
                  </div>
                </div>
                
                <div class="card mb-3">
                  <div class="card-body">
                    <h6 class="card-title">Pro Account</h6>
                    <ul>
                      <li>Minimum deposit: $2,500</li>
                      <li>Leverage: Up to 1:500</li>
                      <li>Spreads: From 0.1 pips</li>
                      <li>Commission: $3.5 per lot</li>
                    </ul>
                    <button class="btn btn-success">Select Pro</button>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6">
                <h5>Account Registration</h5>
                <form>
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="firstName" class="form-label">First Name</label>
                      <input type="text" class="form-control" id="firstName" required />
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input type="text" class="form-control" id="lastName" required />
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" required />
                  </div>
                  
                  <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" required />
                  </div>
                  
                  <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <select class="form-select" id="country" required>
                      <option value="">Select Country</option>
                      <option value="TH">Thailand</option>
                      <option value="US">United States</option>
                      <option value="UK">United Kingdom</option>
                      <option value="SG">Singapore</option>
                    </select>
                  </div>
                  
                  <div class="mb-3">
                    <label for="currency" class="form-label">Base Currency</label>
                    <select class="form-select" id="currency">
                      <option value="USD">USD</option>
                      <option value="EUR">EUR</option>
                      <option value="THB">THB</option>
                    </select>
                  </div>
                  
                  <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="riskWarning" required />
                    <label class="form-check-label" for="riskWarning">
                      I acknowledge the <a href="#">Risk Warning</a>
                    </label>
                  </div>
                  
                  <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="terms" required />
                    <label class="form-check-label" for="terms">
                      I agree to the <a href="#">Terms and Conditions</a>
                    </label>
                  </div>
                  
                  <button type="submit" class="btn btn-danger w-100">Open Live Account</button>
                </form>
                
                <div class="text-center mt-3">
                  <p>Not ready for live trading? <a href="/demo/demoaccount">Try Demo Account</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DemoLayout>