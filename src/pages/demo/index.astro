---
import DemoLayout from '../../layouts/DemoLayout.astro';
---

<DemoLayout title="Demo - Dashboard">
  <div class="container-fluid">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">RUNEX Dashboard</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/demo/demoaccount">Demo Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/demo/liveaccount">Live Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/demo/login">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
          <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">
              Dashboard
            </a>
            <a href="/demo/transactions.deposit" class="list-group-item list-group-item-action">
              Transactions
            </a>
            <a href="#" class="list-group-item list-group-item-action">
              Portfolio
            </a>
            <a href="#" class="list-group-item list-group-item-action">
              Settings
            </a>
          </div>
        </div>

        <!-- Main Dashboard -->
        <div class="col-md-9">
          <h2>Welcome to RUNEX Dashboard</h2>
          
          <!-- Stats Cards -->
          <div class="row mt-4">
            <div class="col-md-4">
              <div class="card text-white bg-primary mb-3">
                <div class="card-header">Balance</div>
                <div class="card-body">
                  <h4 class="card-title">$12,500.00</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card text-white bg-success mb-3">
                <div class="card-header">Profit/Loss</div>
                <div class="card-body">
                  <h4 class="card-title">+$1,250.00</h4>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card text-white bg-info mb-3">
                <div class="card-header">Open Positions</div>
                <div class="card-body">
                  <h4 class="card-title">3</h4>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="card mt-4">
            <div class="card-header">
              <h5>Recent Activity</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>2025-11-04</td>
                      <td>Deposit</td>
                      <td>$500.00</td>
                      <td><span class="badge bg-success">Completed</span></td>
                    </tr>
                    <tr>
                      <td>2025-11-03</td>
                      <td>Trade</td>
                      <td>$150.00</td>
                      <td><span class="badge bg-success">Profit</span></td>
                    </tr>
                    <tr>
                      <td>2025-11-02</td>
                      <td>Withdrawal</td>
                      <td>$200.00</td>
                      <td><span class="badge bg-warning">Pending</span></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DemoLayout>

<style>
  .bg-dark {
    background-color: #222 !important;
  }
</style>